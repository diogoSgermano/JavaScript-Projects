<main>
    <div class="container">
        <div class="row">
            {{#each produto}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="{{url_foto_produto}}" alt="Imagem de{{descricao}}">
                        <div class="textos">
                            <p>{{descricao}}</p>
                            <p>R${{preco}}</p>
                        </div>
                        {{#if ../botoesAcao}}                            
                            {{>_btn-alterar-excluir}}
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>