<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 campos">
      <form>
        <div class="mb-3">
          <label for="email" class="form-label">Insira a nova senha</label>
          <input type="email" class="form-control" id="email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Repita a nova senha</label>
          <input type="password" class="form-control" id="password" required>
        </div>
      {{>_submit link="/animais" texto="Entrar" }} 
      {{>_voltar link="/login/signIn" }} 
      </form>
      {{>_conta}} 
    </div>
  </div>
</div>
